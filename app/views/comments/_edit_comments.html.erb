<%= form_with(model: @comment, local: true) do |f| %>

  <br>
  <div class="form-group">
    <%= f.text_area :comment_entry, class: 'form-control', rows: 8, width: 5, placeholder: 'Enter comment here...', style: 'font-size: 24px;' %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-block btn-primary'%>
  </div>
<% end %>