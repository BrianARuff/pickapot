<% @recipe.comments.each do |comment| %>
<div class="" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document" style="font-size: 36px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="word-wrap: break-word;"><%= simple_format("@#{comment.user.user_name}") + ' | ' + comment.created_at.strftime('%D at %I:%M %p') %></h5>
      </div>
      <div class="modal-body">
        <p style="word-wrap: break-word;"><%= simple_format(comment.comment_entry.html_safe) %></p>
      </div>
      <div class="modal-footer">
      <% if current_user.id == comment.user_id || current_user.admin? %>
        <%= link_to 'Edit Comment', edit_comment_path(comment), class: 'btn btn-warning' %>
        <%= link_to 'Delete Comment', comment_path(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, class: 'btn btn-danger' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>