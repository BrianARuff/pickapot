<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="user_info">
    <div class="form-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, placeholder: 'Enter username', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'Emter your email, for example, testuser@gmail.com', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'complex but rememberable' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'complex but rememberable' %>
    </div>

    <div class="actions">
      <%= f.submit 'Sign up', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>

<%= render "devise/shared/links" %>
